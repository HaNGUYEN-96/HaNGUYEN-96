<%- include('header'); -%>

<main>
    <div class="container my-3">
        <h1>Form Submission Errors</h1>
        <p>
            Unfortunately, there were problems with the data you submitted. 
            Your form contains <strong><%= errors.length %></strong> errors.
        </p>
        <h3>Error List:</h3>
        <ol>
            <% errors.forEach((error) => { %>
                <li>Error in field '<%= error.field %>': <em><%= error.message %></em></li>
            <% }) %>
        </ol>
        <a href="/register">Click here to return to the Registration form</a>
    </div>
</main>

<%- include('footer'); -%>